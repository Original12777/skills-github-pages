    <script>
        const tabs = document.querySelectorAll('.tab-content');
        const navButtons = document.querySelectorAll('.nav-button');

        function openTab(tabId) {
            tabs.forEach(tab => {
                if (tab.id === tabId) {
                    tab.classList.add('active');
                } else {
                    tab.classList.remove('active');
                }
            });
            navButtons.forEach(button => {
                if (button.getAttribute('onclick').includes(tabId)) {
                    button.classList.add('active');
                } else {
                    button.classList.remove('active');
                }
            });
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        const weatherCtx = document.getElementById('weatherChart').getContext('2d');
        const weatherChart = new Chart(weatherCtx, {
            type: 'bar',
            data: {
                labels: ['29. Mai (Do)', '30. Mai (Fr)', '31. Mai (Sa)', '1. Juni (So)'],
                datasets: [{
                    label: 'H√∂chsttemperatur (¬∞C)',
                    data: [26.7, 23.9, 23.9, 26.7],
                    backgroundColor: 'rgba(255, 159, 64, 0.8)', /* Gold */
                    borderColor: 'rgba(255, 159, 64, 1)',
                    borderWidth: 1
                },
                {
                    label: 'Tiefsttemperatur (¬∞C)',
                    data: [15, 16.7, 17.8, 16.1],
                    backgroundColor: 'rgba(54, 162, 235, 0.8)', /* Blue */
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true,
                        title: { display: true, text: 'Temperatur (¬∞C)' }
                    }
                },
                plugins: {
                    legend: { position: 'top' },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                let label = context.dataset.label || '';
                                if (label) {
                                    label += ': ';
                                }
                                if (context.parsed.y !== null) {
                                    label += context.parsed.y + '¬∞C';
                                }
                                return label;
                            }
                        }
                    }
                }
            }
        });

        // Gemini API Integration - Athen-Orakel
        const oracleQuestionInput = document.getElementById('oracleQuestion');
        const askOracleButton = document.getElementById('askOracleButton');
        const oracleResponseDiv = document.getElementById('oracleResponse');

        askOracleButton.addEventListener('click', async () => {
            const prompt = oracleQuestionInput.value.trim();
            if (!prompt) {
                oracleResponseDiv.innerHTML = '<p class="text-red-600">Bitte geben Sie eine Frage ein.</p>';
                oracleResponseDiv.classList.remove('hidden');
                return;
            }

            oracleResponseDiv.innerHTML = '<div class="loading-spinner"></div> Antwort wird geladen...';
            oracleResponseDiv.classList.remove('hidden');

            try {
                let chatHistory = [];
                chatHistory.push({ role: "user", parts: [{ text: `Antworte pr√§gnant und informativ auf Deutsch auf die folgende Frage zu Athen, seiner Geschichte, Mythologie oder Kultur: ${prompt}` }] });
                const payload = { contents: chatHistory };
                const apiKey = ""; 
                const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.0-flash:generateContent?key=${apiKey}`;

                const response = await fetch(apiUrl, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });

                const result = await response.json();

                if (result.candidates && result.candidates.length > 0 &&
                    result.candidates[0].content && result.candidates[0].content.parts &&
                    result.candidates[0].content.parts.length > 0) {
                    const text = result.candidates[0].content.parts[0].text;
                    oracleResponseDiv.innerHTML = `<p>${text}</p>`;
                } else {
                    oracleResponseDiv.innerHTML = '<p class="text-red-600">Entschuldigung, ich konnte keine Antwort finden. Bitte versuchen Sie es erneut.</p>';
                }
            } catch (error) {
                console.error('Fehler beim Abrufen der Orakel-Antwort:', error);
                oracleResponseDiv.innerHTML = '<p class="text-red-600">Ein Fehler ist aufgetreten. Bitte √ºberpr√ºfen Sie Ihre Internetverbindung oder versuchen Sie es sp√§ter erneut.</p>';
            }
        });

        // Flight Status Logic
        const flightNumberInput = document.getElementById('flightNumberInput');
        const checkFlightStatusButton = document.getElementById('checkFlightStatusButton');
        const flightStatusResponseDiv = document.getElementById('flightStatusResponse');

        checkFlightStatusButton.addEventListener('click', async () => {
            const flightNumber = flightNumberInput.value.trim().toUpperCase();
            if (!flightNumber) {
                flightStatusResponseDiv.innerHTML = '<p class="text-red-600">Bitte geben Sie eine Flugnummer ein.</p>';
                flightStatusResponseDiv.classList.remove('hidden');
                return;
            }

            flightStatusResponseDiv.innerHTML = '<div class="loading-spinner"></div> Status wird geladen...';
            flightStatusResponseDiv.classList.remove('hidden');

            // Simulate API call for flight status
            // In a real application, you would make a server-side call to a flight tracking API (e.g., FlightAware, FlightStats, or Google Flights API if available for public use)
            // This client-side JavaScript cannot directly query Google Flights due to CORS policies and API key security.
            setTimeout(() => {
                let statusText = '';
                if (flightNumber === 'A3861') {
                    statusText = 'Ihr Hinflug A3861 (Aegean Air): Planm√§√üig, voraussichtliche Ankunft in Athen 14:00 Uhr. (Simuliert)';
                } else if (flightNumber === 'LH1234') { // Example for a known return flight
                    statusText = 'Ihr R√ºckflug LH1234: Planm√§√üig, voraussichtliche Abflugzeit 18:30 Uhr. (Simuliert)';
                } else if (flightNumber === 'OS567') { // Another example
                    statusText = 'Flug OS567: Versp√§tet, neue Abflugzeit 20:00 Uhr. Grund: Technische √úberpr√ºfung. (Simuliert)';
                } else {
                    statusText = `Flug ${flightNumber}: Status unbekannt oder nicht gefunden. Bitte √ºberpr√ºfen Sie die Nummer. (Simuliert)`;
                }
                flightStatusResponseDiv.innerHTML = `<p>${statusText}</p>`;
            }, 1500); // Simulate network delay
        });
    </script>
